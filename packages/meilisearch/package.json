{
  "name": "@passiontech-global/nestjs-meilisearch",
  "version": "1.3.0",
  "description": "A NestJS module for integrating MeiliSearch",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "build:watch": "tsc --build tsconfig.json --watch",
    "test": "jest"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {
    "@nestjs/common": "^11.1.2",
    "meilisearch": "^0.37.0"
  },
  "author": "DTA",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/passiontech-global/nestjs.git"
  },
  "keywords": [
    "nestjs",
    "meilisearch",
    "search",
    "module"
  ],
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
