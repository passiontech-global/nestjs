{
  "name": "@nestjs-meilisearch/meilisearch",
  "version": "1.0.0",
  "description": "A NestJS module for integrating MeiliSearch",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.2",
    "meilisearch": "^0.37.0"
  },
  "author": "DTA",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/golevelup/nestjs.git"
  },
  "keywords": [
    "nestjs",
    "meilisearch",
    "search",
    "module"
  ],
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
